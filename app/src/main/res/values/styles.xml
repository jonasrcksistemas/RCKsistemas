<resources>

    <!-- Base application theme. -->
    <style name="Theme.MeuTema" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>


        <item name="colorControlNormal">@color/colorControlNormal</item>

    </style>

    <style name="Theme.Toolbar" parent="Theme.AppCompat.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!--Quando ativa o modo seleção nos recyclerview-->
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/bg_action_mode</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

    </style>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionModeOverlay">true</item>
        <item name="android:actionModeBackground">@color/bg_action_mode</item>
    </style>


    <!-- Base application theme. -->
    <style name="Theme.Dialogs" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@color/colorControlNormalAzul</item>

        <item name="android:textAppearance">@color/branco</item>

    </style>


    <style name="Theme.CriarDialog" parent="@android:style/Theme.Holo.Dialog">

        <item name="android:windowBackground">@color/branco</item>
        <item name="android:textAppearance">@color/colorAccent</item>
        <item name="android:windowActionModeOverlay">false</item>
        <item name="android:windowNoTitle">true</item>

        <item name="android:switchStyle">
            @android:style/Widget.Material.Light.CompoundButton.Switch
        </item>
        <item name="android:switchPreferenceStyle">@null</item>

        <item name="android:buttonBarStyle">@null</item>
        <item name="android:listPreferredItemPaddingLeft">56dip</item>
        <item name="android:listPreferredItemPaddingRight">56dip</item>
        <item name="android:listPreferredItemPaddingStart">56dip</item>
        <item name="android:listPreferredItemPaddingEnd">56dip</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.MeuTemaPedido" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimaryCinza</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDarkCinza</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">@color/colorAccent</item>


        <item name="android:colorBackground">@color/branco</item>


        <item name="android:textColor">#000000</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@color/colorControlNormalAzul</item>

    </style>

    <!-- Base application theme. -->
    <style name="Theme.Main" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- colorPrimary is used for the default action bar background -->
        <item name="colorPrimary">@color/colorPrimary</item>

        <!-- colorPrimaryDark is used for the status bar -->
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <!-- colorAccent is used as the default value for colorControlActivated,
             which is used to tint widgets -->
        <item name="colorAccent">#000000</item>

        <!-- You can also set colorControlNormal, colorControlActivated
             colorControlHighlight, and colorSwitchThumbNormal. -->

        <item name="colorControlNormal">@color/colorControlNormal</item>

    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/corBotao</item>
        <item name="android:textColor">@color/branco</item>
        <item name="android:checkableBehavior">all</item>
    </style>

    <style name="txtStyle">
        <item name="android:textColor">@color/colorAccent</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
