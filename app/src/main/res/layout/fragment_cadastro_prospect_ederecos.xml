<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_cliente2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcksuporte05.rcksistemas.interfaces.CadastroClienteMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtEnderecoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="ENDEREÇO"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />


            <EditText
                android:id="@+id/edtEnderecoProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/borda_edittext"
                android:hint="Endereço"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentLeft="true" />

            <TextView
                android:id="@+id/txtNumeroProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtEnderecoProspect"
                android:layout_marginTop="12dp"
                android:text="NUMERO"
                android:textColor="@color/colorAccent"
                android:inputType="number"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/edtNumeroProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtNumeroProspect"
                android:layout_toEndOf="@+id/txtNumeroProspect"
                android:background="@drawable/borda_edittext"
                android:hint="Numero"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@+id/txtNumero" />


            <TextView
                android:id="@+id/txtBairoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtNumeroProspect"
                android:layout_marginTop="12dp"
                android:text="BAIRRO"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/edtBairroProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtBairoProspect"
                android:layout_toEndOf="@+id/txtMunicipio"
                android:background="@drawable/borda_edittext"
                android:hint="Bairro"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:layout_alignParentLeft="true"
                android:layout_toRightOf="@+id/txtMunicipio" />

            <TextView
                android:id="@+id/txtPaisProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtBairroProspect"
                android:layout_marginTop="12dp"
                android:text="PAÍS"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <Spinner
                android:id="@+id/spPaisProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPaisProspect"
                android:gravity="end|center_vertical" />


            <TextView
                android:id="@+id/txtUfProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spPaisProspect"
                android:layout_alignEnd="@+id/rgSituacaoPredio"
                android:layout_alignRight="@+id/rgSituacaoPredio"
                android:layout_marginEnd="21dp"
                android:layout_marginRight="21dp"
                android:text="UF"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spUfProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignStart="@id/txtUfProspect"
                android:layout_below="@id/txtUfProspect"
                android:layout_alignLeft="@id/txtUfProspect"
                />

            <TextView
                android:id="@+id/txtMunicipioProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spPaisProspect"
                android:layout_marginTop="12dp"
                android:text="MUNICIPIO"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spMunicipioProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMunicipioProspect" />

            <TextView
                android:id="@+id/txtCepProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/spMunicipioProspect"
                android:layout_marginTop="12dp"
                android:text="CEP"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_alignParentLeft="true" />

            <EditText
                android:id="@+id/edtCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignEnd="@+id/txtUfProspect"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_alignRight="@+id/txtUfProspect"
                android:layout_below="@+id/txtCepProspect"
                android:background="@drawable/borda_edittext"
                android:hint="CEP"
                android:maxLength="8"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtComplementoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Complemento: "
                android:layout_below="@+id/edtCep"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />

            <EditText
                android:id="@+id/edtComplementoProspect"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:inputType="textCapCharacters|textMultiLine"
                android:maxLength="300"
                android:gravity="top"
                android:background="@drawable/borda_edittext"
                android:layout_below="@+id/txtComplementoProspect"/>

            <TextView
                android:id="@+id/txtRdSituacaoPredio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtComplementoProspect"
                android:text="Predio: "
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                />


            <RadioGroup
                android:id="@+id/rgSituacaoPredio"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtRdSituacaoPredio"
                android:orientation="horizontal"
                >

                <RadioButton
                    android:id="@+id/rdAlugado"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Alugado"
                    />

                <RadioButton
                    android:id="@+id/rdProprio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Proprio"
                    android:layout_marginLeft="45dp"
                    />

            </RadioGroup>


        </RelativeLayout>
    </ScrollView>

</RelativeLayout>
