<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_cliente2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcksuporte05.rcksistemas.activity.CadastroClienteMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtEnderecoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Endereço"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />


            <EditText
                android:id="@+id/edtEnderecoProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:layout_marginTop="21dp"
                android:background="@drawable/borda_edittext"
                android:hint="Endereço"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtNumeroProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtEnderecoProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:text="Numero"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNumeroProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtNumeroProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toEndOf="@+id/txtNumeroProspect"
                android:layout_toRightOf="@+id/txtNumero"
                android:background="@drawable/borda_edittext"
                android:hint="Numero"
                android:inputType="number"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />


            <TextView
                android:id="@+id/txtBairoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtNumeroProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:text="Bairro"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtBairroProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtBairoProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toEndOf="@+id/txtMunicipio"
                android:layout_toRightOf="@+id/txtMunicipio"
                android:background="@drawable/borda_edittext"
                android:hint="Bairro"
                android:inputType="textCapCharacters"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtPaisProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtBairroProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:text="País"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spPaisProspect"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtPaisProspect"
                android:gravity="end|center_vertical" />


            <TextView
                android:id="@+id/txtUfProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@+id/spPaisProspect"
                android:layout_alignStart="@+id/spUfProspect"
                android:layout_alignLeft="@+id/spUfProspect"
                android:text="UF"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spUfProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/txtUfProspect"
                android:layout_marginStart="12dp"
                android:layout_marginLeft="12dp"
                android:layout_toEndOf="@id/spPaisProspect"
                android:layout_toRightOf="@id/spPaisProspect" />

            <TextView
                android:id="@+id/txtMunicipioProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spPaisProspect"
                android:layout_marginTop="12dp"
                android:text="Municipio"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <Spinner
                android:id="@+id/spMunicipioProspect"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtMunicipioProspect" />

            <TextView
                android:id="@+id/txtCepProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/spMunicipioProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="12dp"
                android:text="CEP"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCep"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtCepProspect"
                android:layout_alignEnd="@+id/txtUfProspect"
                android:layout_alignRight="@+id/txtUfProspect"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:background="@drawable/borda_edittext"
                android:hint="CEP"
                android:inputType="number"
                android:maxLength="9"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtComplementoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtCep"
                android:layout_marginTop="12dp"
                android:text="Complemento"
                android:textAppearance="@style/TextAppearance.AppCompat.Small"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtComplementoProspect"
                android:layout_width="match_parent"
                android:layout_height="90dp"
                android:layout_below="@+id/txtComplementoProspect"
                android:background="@drawable/borda_edittext"
                android:gravity="top"
                android:inputType="textCapCharacters|textMultiLine"
                android:maxLength="20" />

            <Button
                android:id="@+id/btnContinuar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtComplementoProspect"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="#e6b220"
                android:text="CONTINUAR 2/3"
                android:visibility="gone" />

        </RelativeLayout>
    </ScrollView>
</RelativeLayout>
