<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbarBancoProspect"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin">


        <TextView
            android:id="@+id/txtInformacoesBancarias"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/edtLimiteDePrazoSugerido"
            android:layout_marginTop="12dp"
            android:text="Informações Bancarias: "
            android:textColor="@color/colorAccent"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/txtBancoProspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtInformacoesBancarias"
            android:layout_marginTop="12dp"
            android:text="Banco: "
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <Spinner
            android:id="@+id/spBancoProspect"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_below="@+id/txtInformacoesBancarias"
            android:layout_alignLeft="@+id/edtContaCorrenteProspect"
            android:layout_alignStart="@+id/edtContaCorrenteProspect" />

        <TextView
            android:id="@+id/txtContaCorrenteProspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/spBancoProspect"
            android:layout_marginTop="12dp"
            android:text="Conta Corrente: "
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtContaCorrenteProspect"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignTop="@+id/txtContaCorrenteProspect"
            android:layout_centerHorizontal="true"
            android:background="@drawable/borda_edittext"
            android:inputType="number" />

        <TextView
            android:id="@+id/txtAgenciaProspect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/txtContaCorrenteProspect"
            android:layout_marginTop="12dp"
            android:text="Agência:"
            android:textColor="@color/colorAccent"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edtAgenciaProspect"
            android:layout_width="80dp"
            android:layout_height="25dp"
            android:layout_alignLeft="@+id/edtContaCorrenteProspect"
            android:layout_alignStart="@+id/edtContaCorrenteProspect"
            android:layout_alignTop="@+id/txtAgenciaProspect"
            android:background="@drawable/borda_edittext"
            android:inputType="number" />

        <Button
            android:id="@+id/btnSalvar"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_below="@+id/edtAgenciaProspect"
            android:layout_gravity="center"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="15dp"
            android:layout_marginBottom="15dp"
            android:background="#e6b220"
            android:text="SALVAR" />


    </RelativeLayout>
</LinearLayout>