<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recyclerSegmentos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                >


            </android.support.v7.widget.RecyclerView>

            <TextView
                android:id="@+id/txtOutrosProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/recyclerSegmentos"
                android:text="Especifique Outros"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />
            <EditText
                android:id="@+id/edtOutrosSegmentosProspect"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/txtOutrosProspect"
                android:background="@drawable/borda_edittext"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="300"
                android:gravity="top"
            />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>