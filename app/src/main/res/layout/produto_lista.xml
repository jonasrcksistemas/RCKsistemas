<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:id="@+id/nomeListaProduto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:text="0000 - nomeListaProduto"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/txtNomeSubGrupo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="12dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="12dp"
        android:layout_marginStart="18dp"
        android:layout_marginTop="5dp"
        android:text="sub grupo"
        android:textColor="#000000"
        android:textSize="10dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_below="@+id/nomeListaProduto"
        android:layout_gravity="center"
        android:layout_marginBottom="12dp"
        android:layout_marginTop="5dp">

        <TextView
            android:id="@+id/txtCodBarra"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Cod Ean: "
            android:textColor="#000000"
            android:textSize="10dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#000000" />


        <TextView
            android:id="@+id/txtUnidadeListaProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="UN"
            android:textColor="#000000"
            android:textSize="10dp" />

        <View
            android:layout_width="1dp"
            android:layout_height="wrap_content"
            android:background="#000000" />

        <TextView
            android:id="@+id/precoProduto"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center"
            android:text="precoProduto"
            android:textColor="#000000" />

    </LinearLayout>
</LinearLayout>