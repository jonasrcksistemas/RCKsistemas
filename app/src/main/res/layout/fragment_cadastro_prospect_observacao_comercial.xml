<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

   <ScrollView
       android:layout_width="match_parent"
       android:layout_height="match_parent">

       <RelativeLayout
           android:layout_width="match_parent"
           android:layout_height="wrap_content"
           android:paddingBottom="@dimen/activity_vertical_margin"
           android:paddingLeft="@dimen/activity_horizontal_margin"
           android:paddingRight="@dimen/activity_horizontal_margin"
           android:paddingTop="@dimen/activity_vertical_margin">

           <TextView
               android:id="@+id/txtObsComercias"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:text="Observações Comerciais: "
               android:textColor="@color/colorAccent"
               android:textSize="16sp"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtObservacaoComercial"
               android:layout_width="match_parent"
               android:layout_height="96dp"
               android:layout_below="@+id/txtObsComercias"
               android:background="@drawable/borda_edittext"
               android:gravity="top"
               android:inputType="textCapSentences|textMultiLine"
               android:maxLength="300" />

           <TextView
               android:id="@+id/txtLimiteCreditoSugerido"
               android:layout_width="185dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/edtObservacaoComercial"
               android:layout_marginTop="12dp"
               android:text="Limete de Credito Sugerido: "
               android:textColor="@color/colorAccent"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtLimiteCreditoSugerido"
               android:layout_width="120dp"
               android:layout_height="25dp"
               android:layout_alignTop="@+id/txtLimiteCreditoSugerido"
               android:layout_toEndOf="@+id/txtLimiteCreditoSugerido"
               android:layout_toRightOf="@+id/txtLimiteCreditoSugerido"
               android:background="@drawable/borda_edittext"
               android:inputType="number"
                />

           <TextView
               android:id="@+id/txtPrazoSugerido"
               android:layout_width="185dp"
               android:layout_height="wrap_content"
               android:layout_below="@+id/edtLimiteCreditoSugerido"
               android:layout_marginTop="12dp"
               android:text="Limete de Prazo Sugerido: "
               android:textColor="@color/colorAccent"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtLimiteDePrazoSugerido"
               android:layout_width="120dp"
               android:layout_height="25dp"
               android:layout_alignTop="@+id/txtPrazoSugerido"
               android:layout_toEndOf="@+id/txtPrazoSugerido"
               android:layout_toRightOf="@+id/txtPrazoSugerido"
               android:background="@drawable/borda_edittext"
               android:inputType="number"
                />

           <TextView
               android:id="@+id/txtInformacoesBancarias"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/edtLimiteDePrazoSugerido"
               android:layout_marginTop="12dp"
               android:text="Informações Bancarias: "
               android:textColor="@color/colorAccent"
               android:textSize="18sp"
               android:textStyle="bold" />

           <TextView
               android:id="@+id/txtBancoProspect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtInformacoesBancarias"
               android:layout_marginTop="12dp"
               android:text="Banco: "
               android:textColor="@color/colorAccent"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtBancoProspect"
               android:layout_width="90dp"
               android:layout_height="25dp"
               android:layout_alignLeft="@+id/edtAgenciaProspect"
               android:layout_alignStart="@+id/edtAgenciaProspect"
               android:layout_alignTop="@+id/txtBancoProspect"
               android:background="@drawable/borda_edittext"
               android:inputType="number" />

           <TextView
               android:id="@+id/txtAgenciaProspect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/txtBancoProspect"
               android:layout_marginTop="12dp"
               android:text="Conta Corrente: "
               android:textColor="@color/colorAccent"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtAgenciaProspect"
               android:layout_width="80dp"
               android:layout_height="25dp"
               android:layout_alignLeft="@+id/edtContaCorrenteProspect"
               android:layout_alignStart="@+id/edtContaCorrenteProspect"
               android:layout_alignTop="@+id/txtAgenciaProspect"
               android:background="@drawable/borda_edittext"
               android:inputType="number"
               />



           <TextView
               android:id="@+id/txtCCProspect"
               android:layout_width="wrap_content"
               android:layout_height="wrap_content"
               android:layout_below="@+id/edtAgenciaProspect"
               android:layout_marginTop="12dp"
               android:text="Conta Corrente: "
               android:textColor="@color/colorAccent"
               android:textStyle="bold" />

           <EditText
               android:id="@+id/edtContaCorrenteProspect"
               android:layout_width="80dp"
               android:layout_height="25dp"
               android:layout_alignBaseline="@+id/txtCCProspect"
               android:layout_alignBottom="@+id/txtCCProspect"
               android:layout_centerHorizontal="true"
               android:background="@drawable/borda_edittext"
               android:inputType="number"
               />




       </RelativeLayout>
   </ScrollView>
</LinearLayout>