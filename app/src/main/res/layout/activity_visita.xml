<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_visita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:theme="@style/Theme.Toolbar"
        />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        >

         <Spinner
            android:id="@+id/spTipoVisita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            />

        <TextView
            android:id="@+id/txtDescricaoVisita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="DESCRIÇÃO VISITA"
            android:theme="@style/txtStyle"
            android:layout_marginTop="8dp"
            android:layout_below="@+id/spTipoVisita"
            />

        <EditText
            android:id="@+id/edtDescricaoVisita"
            android:layout_width="match_parent"
            android:layout_height="96dp"
            android:background="@drawable/borda_edittext"
            android:layout_below="@+id/txtDescricaoVisita"
            android:inputType="textCapCharacters|textMultiLine"
            android:maxLength="300"
            android:gravity="top"
            />

        <TextView
            android:id="@+id/txtDataDoProximoRetorno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:theme="@style/txtStyle"
            android:layout_below="@+id/edtDescricaoVisita"
            android:text="DATA PRÓXIMO RETORNO "
            android:layout_marginTop="15dp"
            />

        <EditText
            android:id="@+id/edtDataRetornoVisita"
            android:layout_width="100dp"
            android:layout_height="wrap_content"
            android:layout_alignBaseline="@+id/txtDataDoProximoRetorno"
            android:layout_alignBottom="@+id/txtDataDoProximoRetorno"
            android:layout_marginLeft="9dp"
            android:layout_marginStart="9dp"
            android:layout_toEndOf="@+id/txtDataDoProximoRetorno"
            android:layout_toRightOf="@+id/txtDataDoProximoRetorno"
            android:background="@drawable/borda_edittext"
            android:focusable="false"
            android:gravity="center"
            android:text="  /  /    "
            android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

        <Button
            android:id="@+id/btnCheckinVisita"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/edtDataRetornoVisita"
            android:layout_marginTop="13dp"
            android:background="@mipmap/ic_localizacao"
            android:theme="@style/Button" />

        <TextView
            android:id="@+id/txtLatitude"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/btnCheckinVisita"
            android:layout_toEndOf="@+id/btnCheckinVisita"
            android:layout_toRightOf="@+id/btnCheckinVisita"
            />

        <TextView
            android:id="@+id/txtLongitude"
            android:layout_toEndOf="@+id/txtLatitude"
            android:layout_toRightOf="@+id/txtLatitude"
            android:layout_below="@+id/txtDataDoProximoRetorno"
            android:layout_alignBaseline="@+id/txtLatitude"
            android:layout_marginLeft="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/txtChekinEndereco"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_alignBottom="@+id/btnCheckinVisita"
            android:layout_toEndOf="@+id/btnCheckinVisita"
            android:layout_toRightOf="@+id/btnCheckinVisita"
             />

        <Button
            android:id="@+id/btnSalvarVisita"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="Salvar Visita"
            android:theme="@style/Button" />
    </RelativeLayout>

</LinearLayout>