<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_cadastro_cliente"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.rcksuporte05.rcksistemas.activity.CadastroClienteMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtId"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:text="ID: 0000"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtPessoa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtId"
                android:layout_marginTop="12dp"
                android:text="PESSOA"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <RadioGroup
                android:id="@+id/rdPessoa"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPessoa"
                android:layout_toEndOf="@+id/txtId"
                android:background="#ededed"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/rdFisica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="23dp"
                    android:text="Física"
                    android:textColor="@color/colorAccent" />

                <RadioButton
                    android:id="@+id/rdJuridica"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="80dp"
                    android:text="Jurídica"
                    android:textColor="@color/colorAccent" />

            </RadioGroup>

            <TextView
                android:id="@+id/txtNomeCliente"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/rdPessoa"
                android:layout_marginTop="12dp"
                android:text="NOME"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtData"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtData"
                android:background="@drawable/borda_edittext"
                android:inputType="date|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtRazaoSocial"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtNomeCliente"
                android:layout_marginTop="12dp"
                android:text="NOME FANTASIA"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNomeFantasia"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtRazaoSocial"
                android:background="@drawable/borda_edittext"
                android:hint="Nome Fantasia"
                android:inputType="textCapCharacters|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtCpfCnpj"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtEmailPrincipal"
                android:layout_marginTop="12dp"
                android:text="CPF"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtCpfCnpj"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtCpfCnpj"
                android:layout_toEndOf="@+id/txtCpfCnpj"
                android:background="@drawable/borda_edittext"
                android:hint="CPF"
                android:inputType="textFilter|number|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtInscEstadual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtCpfCnpj"
                android:layout_marginTop="12dp"
                android:text="INSCRIÇÃO ESTADUAL"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTelefonePrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtTelefonePrincipal"
                android:layout_toStartOf="@+id/btnLigar1"
                android:background="@drawable/borda_edittext"
                android:hint="Telefone Principal"
                android:inputType="phone|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtTelefonePrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtNomeFantasia"
                android:layout_marginTop="12dp"
                android:text="TELEFONE PRINCIPAL"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTelefone1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtTelefone1"
                android:layout_toEndOf="@+id/txtTelefone1"
                android:layout_toStartOf="@+id/btnLigar2"
                android:background="@drawable/borda_edittext"
                android:hint="Telefone I"
                android:inputType="phone|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtTelefone1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtTelefonePrincipal"
                android:layout_marginTop="12dp"
                android:text="TELEFONE I"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtTelefone2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtTelefone2"
                android:layout_toStartOf="@+id/btnLigar3"
                android:background="@drawable/borda_edittext"
                android:hint="Telefone II"
                android:inputType="phone|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtTelefone2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtTelefone1"
                android:layout_marginTop="12dp"
                android:text="TELEFONE II"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtPessoaContato"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtPessoaContato"
                android:layout_toEndOf="@+id/txtPessoaContato"
                android:background="@drawable/borda_edittext"
                android:hint="Pessoa Contato"
                android:inputType="textCapCharacters|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtPessoaContato"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/edtVendedor"
                android:layout_marginTop="12dp"
                android:text="PESSOA CONTATO"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtEmailPrincipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtEmailPrincipal"
                android:layout_toEndOf="@+id/txtEmailPrincipal"
                android:background="@drawable/borda_edittext"
                android:hint="E-mail Principal"
                android:inputType="textEmailAddress|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtEmailPrincipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtPessoaContato"
                android:layout_marginTop="12dp"
                android:minLines="1"
                android:text="E-MAIL PRINCIPAL"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtNomeCliente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtNomeCliente"
                android:background="@drawable/borda_edittext"
                android:hint="Nome"
                android:inputType="textCapCharacters|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <EditText
                android:id="@+id/edtInscEstadual"
                android:layout_width="130dp"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/txtInscEstadual"
                android:layout_toStartOf="@+id/spIe"
                android:background="@drawable/borda_edittext"
                android:hint="Inscrição Estadual"
                android:inputType="textFilter|numberSigned|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Spinner
                android:id="@+id/spIe"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/edtInscEstadual" />

            <TextView
                android:id="@+id/txtData"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtInscMunicipal"
                android:layout_marginTop="12dp"
                android:text="DATA"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/txtVendedor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtTelefone2"
                android:layout_marginTop="12dp"
                android:text="VENDEDOR"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtVendedor"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtVendedor"
                android:background="@drawable/borda_edittext" />

            <TextView
                android:id="@+id/txtInscMunicipal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtInscEstadual"
                android:layout_marginTop="12dp"
                android:text="INSCRIÇÃO MUNICIPAL"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtInscMunicipal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/txtInscMunicipal"
                android:background="@drawable/borda_edittext"
                android:hint="Inscrição Municipal"
                android:inputType="textFilter|numberSigned|textMultiLine"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Button
                android:id="@+id/btnLigar1"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/edtTelefonePrincipal"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/ic_telefone"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnLigar2"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/edtTelefone1"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/ic_telefone"
                android:scaleType="centerCrop" />

            <Button
                android:id="@+id/btnLigar3"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/edtTelefone2"
                android:layout_alignParentEnd="true"
                android:background="@mipmap/ic_telefone"
                android:scaleType="centerCrop" />

        </RelativeLayout>
    </ScrollView>
</LinearLayout>