<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rlItemListaProspectEnviado"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView
        android:text="Texto"
        android:id="@+id/txtIdProspectEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="12dp"
        android:layout_marginTop="2dp"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small" />

    <TextView
        android:text="Texto"
        android:layout_below="@+id/txtIdProspectEnviado"
        android:id="@+id/nomeProspectEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="17dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:textColor="#000000"
        android:layout_marginStart="17dp" />

    <TextView
        android:id="@+id/txtVisitarEm"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nomeProspectEnviado"
        android:layout_marginEnd="10dp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/txtDataRetornoEnviado"
        android:layout_toStartOf="@+id/txtDataRetornoEnviado"
        android:text="Visitar em: "
        android:theme="@style/txtStyle" />

    <TextView
        android:id="@+id/txtDataRetornoEnviado"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@+id/txtVisitarEm"
        android:layout_marginEnd="25dp"
        android:layout_marginRight="25dp"
        android:gravity="end"
        android:maxLines="1"
        android:text="Texto" />

</RelativeLayout>