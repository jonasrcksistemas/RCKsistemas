<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcksuporte05.rcksistemas.activity.CadastroClienteMain">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingBottom="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtobsFat"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentTop="true"
                android:text="Observações que devem aparecer no momento do faturamento"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtobsFat"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/txtobsFat"
                android:background="@drawable/borda_edittext"
                android:gravity="top"
                android:inputType="textCapCharacters|textMultiLine"
                android:maxLength="300"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <TextView
                android:id="@+id/txtObsFinancas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/edtobsFat"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_marginTop="16dp"
                android:text="Observações financeiras"
                android:textColor="@color/colorAccent"
                android:textStyle="bold" />

            <EditText
                android:id="@+id/edtObsFinancas"
                android:layout_width="match_parent"
                android:layout_height="180dp"
                android:layout_below="@+id/txtObsFinancas"
                android:background="@drawable/borda_edittext"
                android:gravity="top"
                android:inputType="textCapCharacters|textMultiLine"
                android:maxLength="300"
                android:textAppearance="@style/TextAppearance.AppCompat.Small" />

            <Button
                android:id="@+id/btnSalvar"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_below="@+id/edtObsFinancas"
                android:layout_gravity="center"
                android:layout_marginStart="15dp"
                android:layout_marginTop="15dp"
                android:layout_marginEnd="15dp"
                android:layout_marginBottom="15dp"
                android:background="#e6b220"
                android:text="FINALIZAR CADASTRO"
                android:visibility="visible" />
        </RelativeLayout>
    </ScrollView>
</LinearLayout>
