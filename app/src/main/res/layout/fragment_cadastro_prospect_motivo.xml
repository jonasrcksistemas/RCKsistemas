<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="@dimen/activity_vertical_margin"
            android:paddingLeft="@dimen/activity_horizontal_margin"
            android:paddingRight="@dimen/activity_horizontal_margin"
            android:paddingTop="@dimen/activity_vertical_margin">

            <TextView
                android:id="@+id/txtMotivoProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Motivos de Não Cadastramento "
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                />

            <RadioGroup
                android:id="@+id/rdMotivosProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_below="@id/txtMotivoProspect"
                >

                    <RadioButton
                        android:id="@+id/naoTemInteresseNoProduto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não Tem Interesse no Produto"
                        />

                    <RadioButton
                        android:id="@+id/temExclusividadeComConcorrencia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Tem Exclusividade Com Concorrencia"
                        />

                    <RadioButton
                        android:id="@+id/naoTemEspacoFisco"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não tem Espaço Fisico"
                        />

                    <RadioButton
                        android:id="@+id/baixaLucratividade"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Baixa Lucratividade"
                        />

                    <RadioButton
                        android:id="@+id/naoTemDemandaOuProcura"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Não tem Demanda Ou Procura"
                        />

                    <RadioButton
                        android:id="@+id/jaTrabalhouComOProdutoNãoTeveExito"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Já Trabalhou com o Produto e Não Teve Exito"
                        />

                    <RadioButton
                        android:id="@+id/desconheceAMarca"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Desconhece a Marca"
                        />

                    <RadioButton
                        android:id="@+id/custoAltoDoProduto"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Custo Alto do Produto"
                        />

                    <RadioButton
                        android:id="@+id/OutrosEspecifique"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Outros especifique"
                        />


            </RadioGroup>

            <TextView
                android:id="@+id/txtOutrosMotivosProspect"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rdMotivosProspect"
                android:text="Especifique Outros"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:layout_marginTop="12dp"
                />
            <EditText
                android:id="@+id/edtOutrosMotivosProspect"
                android:layout_width="match_parent"
                android:layout_height="96dp"
                android:layout_below="@+id/txtOutrosMotivosProspect"
                android:background="@drawable/borda_edittext"
                android:inputType="textCapSentences|textMultiLine"
                android:maxLength="300"
                android:gravity="top"
                />


        </RelativeLayout>
    </ScrollView>

</LinearLayout>