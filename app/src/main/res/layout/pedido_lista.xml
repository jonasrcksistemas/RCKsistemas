<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/item_lista_pedido"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/bg_list_row"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txtIdPedido"
        android:layout_width="40dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="4dp"
        android:gravity="center"
        android:text="15554"
        android:textColor="#535353"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txtNomeCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginLeft="13dp"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="5dp"
        android:layout_toEndOf="@+id/txtIdPedido"
        android:layout_toRightOf="@+id/txtIdPedido"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="nomeCliente"
        android:textSize="16sp"
        android:layout_marginRight="5dp" />

    <TextView
        android:id="@+id/txtPrecoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="5dp"
        android:layout_marginEnd="5dp"
        android:layout_alignTop="@+id/txtDataEntrega"
        android:layout_toLeftOf="@+id/viewCor"
        android:layout_toStartOf="@+id/viewCor"
        android:text="precoPedido"
        android:textColor="#000000"
        android:textSize="16sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/img_data_emissao"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/txtDataEmissaoPedido"
        android:src="@mipmap/ic_clip_board"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:id="@+id/txtDataEmissaoPedido"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="11dp"
        android:layout_toEndOf="@+id/img_data_emissao"
        android:layout_toRightOf="@+id/img_data_emissao"
        android:text="data missao"
        android:textSize="15sp"
        android:textColor="#000000" />

    <ImageView
        android:id="@+id/img_data_entrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignTop="@+id/txtDataEmissaoPedido"
        android:layout_toEndOf="@+id/txtDataEmissaoPedido"
        android:layout_toRightOf="@+id/txtDataEmissaoPedido"
        android:src="@mipmap/ic_truck"
        android:layout_marginBottom="11dp"
        />

    <TextView
        android:id="@+id/txtDataEntrega"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/img_data_entrega"
        android:layout_toEndOf="@+id/img_data_entrega"
        android:layout_toRightOf="@+id/img_data_entrega"
        android:gravity="center_horizontal"
        android:text="data entrega"
        android:textColor="#000000"
        android:textSize="15sp" />

    <View
        android:id="@+id/viewCor"
        android:layout_width="10dp"
        android:layout_height="45dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        android:layout_alignTop="@+id/txtDataEmissaoPedido"
        android:background="#000000" />


</RelativeLayout>