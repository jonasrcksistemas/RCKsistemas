<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.rcksuporte05.rcksistemas.interfaces.MainActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/tb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        tools:context=".interfaces.MainActivity"
        app:theme="@style/Theme.Toolbar"/>

    <Button
        android:text="Fechar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/btnEntrar"
        android:layout_toRightOf="@+id/btnEntrar"
        android:layout_toEndOf="@+id/btnEntrar"
        android:layout_marginLeft="39dp"
        android:layout_marginStart="39dp"
        android:id="@+id/btnFechar" />

    <Button
        android:text="Entrar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="25dp"
        android:layout_marginTop="38dp"
        android:id="@+id/btnEntrar"
        android:layout_below="@+id/edtSenha"
        android:layout_alignStart="@+id/edtSenha" />

    <TextView
        android:text="Senha:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:id="@+id/txtSenha"
        android:layout_below="@+id/edtLogin"
        android:layout_alignParentStart="true"
        android:layout_marginStart="18dp" />

    <TextView
        android:text="Login:"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txtLogin"
        android:layout_below="@+id/tb_main"
        android:layout_alignStart="@+id/txtSenha"
        android:layout_marginTop="25dp"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textCapCharacters|textCapWords"
        android:id="@+id/edtLogin"
        android:hint="Login"
        android:layout_below="@+id/txtLogin"
        android:layout_marginRight="70dp"
        android:layout_centerInParent="true"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPassword"
        android:id="@+id/edtSenha"
        android:hint="Senha"
        android:layout_below="@+id/txtSenha"
        android:layout_alignEnd="@+id/edtLogin"
        android:layout_alignStart="@+id/edtLogin" />
</RelativeLayout>
