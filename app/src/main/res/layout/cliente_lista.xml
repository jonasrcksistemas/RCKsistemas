<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/nomeListaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/view"
        android:layout_marginTop="19dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="nomeListaCliente"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/telefoneListaCliente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignEnd="@+id/view"
        android:layout_alignTop="@+id/textViewNomeFantasia"
        android:ellipsize="end"
        android:maxLines="1"
        android:text="telefoneListaCliente" />

    <TextView
        android:id="@+id/textViewNomeFantasia"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/nomeListaCliente"
        android:layout_below="@+id/nomeListaCliente"
        android:layout_marginEnd="180dp"
        android:layout_marginTop="5dp"
        android:ellipsize="end"
        android:maxLines="1"
        android:scrollHorizontally="true"
        android:text="textViewNomeFantasia"
        android:textAlignment="center" />

    <View
        android:id="@+id/view"
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/telefoneListaCliente"
        android:layout_marginEnd="25dp"
        android:layout_marginStart="25dp"
        android:layout_marginTop="10dp"
        android:background="#dfdfdf"
        android:focusable="false" />

</RelativeLayout>